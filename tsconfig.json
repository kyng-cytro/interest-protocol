{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*", "src/utils/*"]
    }
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
